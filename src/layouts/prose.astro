---
import "@styles/base.scss";
import DefaultLayout from "@layouts/default.astro";
import MainPageAnchor from "@components/MainPageAnchor.astro";

const { title, lang } = Astro.props;

interface Props {
  title?: string;
  lang: string;
}
---

<DefaultLayout title={title || "unnamed"} lang={lang}>
  <body>
    <MainPageAnchor />

    {title != "unnamed" && <h2 class="title">{title}</h2>}
    <div class="prose">
      <slot />
    </div>

    <MainPageAnchor />
  </body>
</DefaultLayout>
